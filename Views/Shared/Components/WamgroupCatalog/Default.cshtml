                    <div class="accordion accordion-flush" id="category_accordion_container">
                        <div class="category-accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                                    Solution by Industry
                            <span class="checkCounter empty"></span>
                                </button>
                            </h2>
                            <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#category_accordion_container">
                              <div class="accordion-body">
                                 @foreach (var item in Model.SolutionsByIndustry)
                                 {
                                    <div class="form-checkbox">
                                        <input class="form-checkbox-input checkbox-sbi" type="checkbox" value="@item.Id" id="sbi_@item.Id" @(item.IsSelected ? "checked" : "")>
                                          <label class="form-checkbox-label" for="sbi_@item.Id">
                                            @item.Title
                                        </label>
                                    </div>
                                 }

                              </div>
                            </div>
                        </div>
                        <div class="category-accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                                    Solution by Tecnology
                                    <span class="checkCounter empty"></span>
                                </button>
                            </h2>
                            <div id="flush-collapseTwo" class="accordion-collapse collapse" data-bs-parent="#category_accordion_container">
                                <div class="accordion-body">

                                    @foreach (var item in Model.SolutionsByNeed)
                                    {
                                       <div class="form-checkbox">
                                          <input class="form-checkbox-input checkbox-sbt" type="checkbox" value="@item.Id" id="sbt_@item.Id" @(item.IsSelected ? "checked" : "")>
                                          <label class="form-checkbox-label" for="sbt_@item.Id">
                                             @item.Title
                                          </label>
                                       </div>
                                    }

                                 </div>
                            </div>
                        </div>
                        <div class="category-accordion-item">
                           <h2 class="accordion-header">
                              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseBrands" aria-expanded="false" aria-controls="flush-collapseBrands">
                                 Brand
                                 <span class="checkCounter empty"></span>
                              </button>
                           </h2>
                           <div id="flush-collapseBrands" class="accordion-collapse collapse" data-bs-parent="#category_accordion_container">
                              <div class="accordion-body">

                                 @foreach (var item in Model.Brands)
                                 {
                                    <div class="form-checkbox">
                                       <input class="form-checkbox-input checkbox-b" type="checkbox" value="@item.Id" id="b_@item.Id" @(item.IsSelected ? "checked" : "")>
                                       <label class="form-checkbox-label" for="b_@item.Id">
                                          @item.Title
                                       </label>
                                    </div>
                                 }

                              </div>
                           </div>
                        </div>
                        <div class="category-accordion-item">
                           <h2 class="accordion-header">
                              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFamilies" aria-expanded="false" aria-controls="flush-collapseFamilies">
                                 Family
                                 <span class="checkCounter empty"></span>
                              </button>
                           </h2>
                           <div id="flush-collapseFamilies" class="accordion-collapse collapse" data-bs-parent="#category_accordion_container">
                              <div class="accordion-body">

                                 @foreach (var item in Model.Macrofamilies)
                                 {
                                    <div class="category-accordion-item__level1">
                                       <h2 class="accordion-header">
                                       <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#mf-@item.Id" aria-expanded="false" aria-controls="flush-collapseThree">
                                             @item.Title
                                          </button>
                                       </h2>
                                       <div id="mf-@item.Id" class="accordion-collapse collapse">
                                          <div class="accordion-body">

                                             @foreach (var familyItem in item.Families)
                                             {
                                                <div class="form-checkbox">
                                                      <input class="form-checkbox-input checkbox-fam" type="checkbox" value="@familyItem.Id" id="fam-@familyItem.Id" @(familyItem.IsSelected ? "checked" : "")>
                                                      <label class="form-checkbox-label" for="fam-@familyItem.Id">
                                                      @familyItem.Title
                                                   </label>
                                                </div>
                                             }

                                          </div>
                                       </div>
                                    </div>


                                   
                                 }

                              </div>
                           </div>
                        </div>
                        
                        <div class="category-accordion-item">
                            <h2 class="accordion-header">
