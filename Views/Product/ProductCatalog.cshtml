@using Elogic.Wamgroup.Sito2023.NetCore.ViewModels.WamgroupCatalog;
@{
   Layout = "";
}

@model WamgroupCatalogViewModel

@foreach (var item in Model.Products)
{
   <div class="product-finder_product row-product">
      <div class="product-finder_product-image">
         <img src="@item.ImageUrl" alt="product image">
      </div>
      <div class="product-finder_product-info">
         <div class="product-finder_product-title">@item.Title</div>

         <div class="product-finder_product-link">
            <a href="@item.Url" target="_blank" title="Read more" aria-label="Read more" class="wp-ctaText" data-call-to-action="" style="color:inherit">
               <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17.141" viewBox="0 0 20 17.141">
                  <path id="Tracciato_17578" data-name="Tracciato 17578" d="M108.875-41.678Zm11.811-8.275,7.856,7.5a1.072,1.072,0,0,1,.332.776,1.073,1.073,0,0,1-.332.776l-7.856,7.5a1.073,1.073,0,0,1-1.515-.036,1.07,1.07,0,0,1,.036-1.515l5.924-5.651H109.947a1.072,1.072,0,0,1-1.072-1.072,1.072,1.072,0,0,1,1.072-1.071h15.182L119.2-48.4a1.076,1.076,0,0,1-.036-1.517A1.075,1.075,0,0,1,120.687-49.953Z" transform="translate(-108.875 50.248)" fill="currentColor" />
               </svg>
            </a>
         </div>
      </div>
   </div>
}
<nav aria-label="Page navigation" class="navigation-result">
   @if (Model.PageCount > 1)
   {
      <ul class="pagination">
         @if (Model.CurrentPage > 1)
         {
            <li class="page-item">
               <a class="page-link" href="#" aria-label="Previous" value="1">
                  <span aria-hidden="true">&lt;</span>
                  <span class="sr-only">Previous</span>
               </a>
            </li>
         }
         @for (int i = 1; i <= Model.PageCount; i++)
         {
            <li class="page-item @(i==Model.CurrentPage ? "active" : "")">
               <a class="page-link" href="#" value="@i">@i</a>
            </li>
         }

         @if (Model.CurrentPage < Model.PageCount)
         {
            <li class="page-item">
               <a class="page-link" href="#" aria-label="Next" value="@Model.PageCount">
                  <span aria-hidden="true">&gt;</span>
                  <span class="sr-only">Next</span>
               </a>
            </li>
         }


      </ul>
   }
</nav>

<div class="total-count-result">@Model.TotalProducts</div>